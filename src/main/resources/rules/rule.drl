// 函数可以在每个规则的RHS被调用
function void say(String ruleName) {
    System.out.println("Well done, " + ruleName + " is executed!");
}

query "query1"
    $q : Query(name matches "query\\d+")
end

query "query2"(String[] $names)
    $q : Query(name memberOf $names)
end